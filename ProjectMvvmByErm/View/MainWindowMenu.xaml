<Window x:Class="ProjectMvvmByErm.View.MainWindowMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjectMvvmByErm.View"
        mc:Ignorable="d"
        Title="MainWindowMenu" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <StackPanel Margin="20">
                <Label HorizontalAlignment="Center" FontSize="30">
                    MENU
                </Label>
            </StackPanel>
            <StackPanel Margin="30">
                <Button Margin="15" Width="300" Height="30">Добавить нового сотрудника</Button>
                <Button Margin="15" Width="300" Height="30">Добавить новую позицию</Button>
                <Button Margin="15" Width="300" Height="30">Добавить новый отдел</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
